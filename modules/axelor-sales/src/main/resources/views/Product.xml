<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views https://axelor.com/xml/ns/object-views/object-views_6.0.xsd">

    <grid name="sales-product-grid"
          title="Products"
          model="com.axelor.apps.sales.db.Product">
        <field name="name" title="Name" required="true" min="2"/>
        <field name="code" title="Code" required="true" min="2"/>
        <field name="unitPrice" title="Unit Price"/>
    </grid>

    <form name="sales-product-form"
          title="Products"
          model="com.axelor.apps.sales.db.Product">

        <panel name="overviewPanel" title="Product Overview">

            <field name="name" title="Name" required="true" min="2" colSpan="4"/>
            <field name="code" title="Code" required="true" min="2" colSpan="4"/>
            <field name="unitPrice" title="Unit Price" colSpan="4" />

        </panel>
    </form>



</object-views>