<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views https://axelor.com/xml/ns/object-views/object-views_6.0.xsd">

    <grid  name="sales-orders-grid"
           title="Sales orders"
           model="com.axelor.apps.sales.db.Order">
        <field name="customer" grid-view="contact-grid" form-view="contact-form"/>
        <field name="orderDate" title="Order's date" required="true"/>
        <field name="confirmationDate" title="Confirmation date"/>
    </grid>

    <form name="sales-orders-form"
          title="Sales orders"
          model="com.axelor.apps.sales.db.Order">
        <panel name="orderInfoPanel"
               title="Order Information"
               colSpan="12">


                <button name="validate" onClick="" title="Validate" colSpan="6"/>
                <button name="compute" onClick="" title="Compute" colSpan="6"/>


                <field name="customer" colSpan="12">
                    <editor>
                        <field name="fullName" title="Full Name" colSpan="3"></field>
                        <field name="email" title="Email" colSpan="3"></field>
                        <field name="phone" title="Phone" colSpan="3"></field>
                        <field name="address" title="Address" colSpan="3"></field>

                    </editor>
                </field>


                <field name="orderDate" title="Order's Date" required="true"/>
                <field name="confirmationDate" title="Confirmation date"/>
                <field name="stateSelect" title="State"/>

                <field name="exTaxTotal" title="Total without tax" precision="10" scale="2" />
                <field name="total" title="Total" precision="10" scale="2"/>

                <field name="orderLineList" title="Order lines" form-view="sales-orderLine-form" grid-view="sales-orderLine-grid"/>



        </panel>

    </form>
</object-views>