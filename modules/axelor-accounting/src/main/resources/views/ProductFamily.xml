<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views https://axelor.com/xml/ns/object-views/object-views_6.0.xsd">

    <grid name="accounting-productfamily-grid"
          title="Product Family"
          model="com.axelor.apps.accounting.db.ProductFamily"
          >

        <field name="name" title="Name"/>
        <field name="code" title="Code"/>
    </grid>

    <form name="accounting-productfamily-form"
          title="Product Family"
          model="com.axelor.apps.accounting.db.ProductFamily">

        <panel name="productFamilyPanel" title="Product Family" showTitle="false">
            <field name="name" title="Name" required="true"/>
            <field name="code" title="Code" required="true"/>
        </panel>

    </form>


</object-views>